    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "dev",
            "restart": true,
            "env": {
                "NODE_ENV": "dev"
            },
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/node_modules/@nestjs/cli/bin/nest.js",
            "args": ["start", "-d", "-w"],
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "runtimeExecutable": "node",
            "console": "integratedTerminal",
            "sourceMaps": true
        }
    ]
}
